<%- include('includes/head') %> 
<%- include('includes/nav') %> 
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
        <h1 class="text-center">Login</h1>
        <p class="text-center lead">Faça login ou crie sua conta abaixo:</p>

        <div class="row">

            <div class="col-lg">
                <h4>Faça seu cadastro</h4>
                <p>Registre-se caso nao possua conta:</p>
                <form action="/login/register" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group my-2">

                      <label>Seu Email</label>
                      <input type="email" class="form-control" name="email">

                    </div>
                    
                    <div class="form-group my-3">

                        <label>Sua Senha</label>
                        <input type="password" class="form-control" name="password">
  
                      </div>                   
                    <button type="submit" class="btn btn-primary my-3">Criar minha conta</button>
                </form>
            </div>

            <div class="col-lg">
                <h4>Entrar no sistema</h4>
                <p>Efetue login para continuar:</p>

                <form action="/login/login" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group my-2">

                      <label>Seu Email</label>
                      <input type="email" class="form-control" name="email">

                    </div>
                    
                    <div class="form-group my-3">

                        <label>Sua Senha</label>
                        <input type="password" class="form-control" name="password">
  
                      </div>                   
                    <button type="submit" class="btn btn-primary my-3">Entrar</button>
            </div>

        </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer')%> 

   